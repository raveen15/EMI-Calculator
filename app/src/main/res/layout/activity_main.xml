<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/durationTextBox"
        android:layout_width="229dp"
        android:layout_height="39dp"
        android:layout_marginBottom="76dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter loan duration (years)"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/interestTextBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/interestTextBox"
        android:layout_width="212dp"
        android:layout_height="39dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter interest rate"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.752" />

    <TextView
        android:id="@+id/emidescription"
        android:layout_width="258dp"
        android:layout_height="78dp"
        android:layout_marginBottom="68dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="@string/str_description"
        app:layout_constraintBottom_toTopOf="@+id/principalAmountTextBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/principalAmountTextBox"
        android:layout_width="206dp"
        android:layout_height="40dp"
        android:layout_marginBottom="76dp"
        android:contentDescription="Mortgage Principle Amount"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter principle amount"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/durationTextBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_menu_month" />
</androidx.constraintlayout.widget.ConstraintLayout>